html
  font-size 16px
  

body
  @extend $BodyFont
  background-color $white
  margin 0
  padding 0
  

a
  @extend $LinkStyle
  

h1, h2, h3
  @extend $HeaderFont


.page
  position relative
  min-height 100vh
  width 100%
  
  main
    background-color $white
    min-height "calc(100vh - %s)" % ($headerHeight)
    padding 1em 1.5em 0
    +below($width-xs)
      padding 1em

strong
  font-weight bolder