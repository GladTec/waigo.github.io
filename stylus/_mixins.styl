retina-image(path, w = auto, h = auto, min_pixel_ratio = 1.5)
  image(path, w, h, min_pixel_ratio)
  if w in (cover contain) and h == auto
    h = null
  background-size w h
  background-repeat no-repeat
  background-position center center

text-bg-color-border-radius(color, paddingV = 0.1em, paddingH = 0.2em)
  padding paddingV paddingH
  background-color color
  border-radius 5px


link(textColor = $color4, hoverTextColor = $white)
  color textColor
  text-decoration none
  border-bottom 1px solid textColor
  transition all 0.2s linear
  &:hover
    color hoverTextColor
    background-color textColor

navlink(textColor = $white, hoverTextColor = $white, hoverBgColor = transparent, hoverBorderColor = $white)
  color textColor
  text-decoration none
  border 1px solid transparent
  transition all 0.2s linear
  padding 0 0.5em
  border-radius 5px
  &:hover, &.active
    color hoverTextColor
    background-color hoverBgColor
    border 1px solid hoverBorderColor


nolink()
  color inherit
  background-color inherit
  text-decoration none
  border-bottom none
  &:hover
    color inherit
    background-color inherit
    border-radius 0px
    border-bottom none

button(btnColor = $color4, hoverTextColor = $white)
  rawbutton(btnColor,, btnColor, hoverTextColor, btnColor, btnColor)


rawbutton(textColor = $color4, bgColor = transparent, borderColor = $color4, hoverTextColor = $white, hoverBgColor = $color4, hoverBorderColor = $color4)
  @extend $HeaderFontBold
  border-radius 10px
  border 1px solid borderColor
  padding 0.7em 1em
  transition all 0.2s linear
  color textColor
  background-color bgColor
  cursor pointer
  &:hover
    border-radius 10px
    border 1px solid hoverBorderColor
    color hoverTextColor
    background-color hoverBgColor


mixin standard-box-shadow()
  box-shadow 0px 7px 26px -1px rgba(0,0,0,0.53)
