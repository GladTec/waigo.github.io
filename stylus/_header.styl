header
  @extend $HeaderFont
  position relative
  width 100%
  height $headerHeight
  margin-bottom 1.5em
  transition all 0.3s linear
  
  background-color $color1
  color $white
  box-shadow 0px 7px 26px -1px rgba(0,0,0,0.23)

  
  .page.home .headroom--unfixed &
    background-color $color4
    color $white
    box-shadow none

  .page.home .headroom--pinned &
    background-color $color1
    color $white
    box-shadow 0px 7px 26px -1px rgba(0,0,0,0.53)

  .brand
    position absolute
    height $headerHeight
    a
      nolink()
      padding 0 0.5em
      line-height $headerHeight
      font-size 1.5rem
      
  ul.nav
    position absolute
    height $headerHeight
    right 15px
    list-style none
    display flex
    flex-flow row no-wrap    
    justify-content center
    align-items center
    li
      display inline-block    
      height 48px
      margin-right 1.3em
      +below($width-s)
        margin-right 1em
      &:last-child
        margin-right 0
      a
        navlink()
        font-size 1.2em
        display inline-block
        height 100%
        line-height 48px
      &.social
        margin-right 0.3em
        a
          font-size 1em
    
    +below($width-xs)
      opacity 0
      z-index 2
      pointer-events none
      transition opacity 0.3s linear
      display block
      top $headerHeight - 16px
      border-radius 10px
      li
        display block
        background-color $white
        margin 0
        border-bottom 1px solid $black
        &.social
          margin 0
        &:last-child
          border-bottom none
        a
          navlink($black, $white, $black, transparent)
          font-size 1em
          display block
          border-radius 0
          text-align center
      &.active
        opacity 1
        pointer-events auto

        
  button.mobile-toggle
    button($white, $color4)
    display none
    position absolute
    right 15px
    top ($headerHeight - 32px) * 0.5
    width 32px
    height 32px
    padding 0px
    cursor pointer
    i
      display block
    +below($width-xs)
      display block


