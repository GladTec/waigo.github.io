$HeaderFont
  font-family "Josefin Sans", Roboto, Arial, sans-serif
  font-weight 400

$HeaderFontThin
  @extend $HeaderFont
  font-weight 300

$BodyFont
  font-family "Raleway", Arial, sans-serif
  font-weight 300

$BodyFontBold
  @extend $BodyFont
  font-weight 500

$LinkStyle
  color $black
  text-decoration none
  border-bottom 1px solid $black
  &:hover
    color $white
    background-color $black
    border-radius 10px
    

$NavLinkStyle
  @extend $LinkStyle
  color $black
  text-decoration none
  border-bottom none
  &:hover
    color $black
    background-color $white
    border-radius 0px
    border-bottom 1px solid $black
  


$NoLinkStyle
  @extend $LinkStyle
  color inherit
  text-decoration none
  border-bottom none
  &:hover
    color inherit
    border-radius 0px
    border-bottom none