.page.docs
  position relative
  
  aside
    @extend $BodyFont
    padding 0 0.5em 0 0
    border-right 1px solid $color3
    font-size 1.1rem
    width 30%
    a
      border-bottom none
      &:hover
        border-bottom 1px dashed $black
    li.active > a
      @extend $BodyFontBold
      font-size 140%
      color $black
      border-bottom 1px dashed $black
      &:hover
        color $white
    > ul
      > li
        padding 0.5em 0
        > ul
          display none
        &.active
          > ul
            color $black
            display block
            font-size 80%
            margin 0.7em 0 0 2em
            > li
              padding 0.4em 0
