.page.docs
  position relative
  
  main
    padding-top 2em

  section.content
    display inline-block
    vertical-align top
    width 70%
    padding-left 20px
    font-size 1rem
    line-height 1.5em
    h1
      font-size 250%
      margin 0 0 1em
    h2
      font-size 160%
      margin 0 0 1em
    p
      margin 1em 0
      
    ul
      list-style disc
      margin-left 1.1em
      li
        padding 0.2em 0
      

  aside
    display inline-block
    vertical-align top
    @extend $BodyFont
    padding 0 20px 0 0
    border-right 1px solid $color3
    font-size 1.1rem
    width 20%
    a
      border-bottom none
      &:hover
        border-bottom 1px dashed $black
    li.active > a
      @extend $BodyFontBold
      font-size 140%
      color $black
      border-bottom 1px dashed $black
      &:hover
        color $white
    > ul
      > li
        line-height 2em
        > ul
          display none
        &.active
          > ul
            color $black
            display block
            font-size 80%
            margin 0.7em 0 0 2em
            > li
              line-height 1.8em
