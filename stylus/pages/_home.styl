$SplashLinkStyle
  @extend $NavLinkStyle
  &:hover
    color $black
    background-color $white

.page.home
  position relative
  
  .splash
    position absolute
    top 0
    left 0
    width 100vw
    height 100vh
    background-color $color4
    display flex
    flex-flow column no-wrap
    justify-content center
    align-items center
    color $white
    font-size 1.7rem
    text-align center

    .logo
      display block
      width 144px
      height 144px
      margin 0 0 0.5em
      retina-image("/img/logo.png", contain)
    
    p.tagline
      @extend $HeaderFont
      margin 0.7em 0
      font-size 120%
      width 50%
      +below($width-s)
        width 80%
    
    .actions
      margin 1em 0 2em
      a
        @extend $ButtonStyle
        font-size 80%
        color $white
        border 1px solid $white
        margin 0 0.5em
        &:hover
          background-color $white
          color $black

    .install
      @extend $CodeFont
      font-size 60%
      text-bg-color-border-radius($color1, 0.3em, 0.4em)      
      
    .meta
      margin-top 1.2em
      a
        @extend $SplashLinkStyle
        font-size 50%
        color $white
        margin 0 0.5em
        i + span
          margin-left 0.3em
        