.page.home
  position relative
  
  .splash
    position absolute
    top 0
    left 0
    width 100vw
    height 100vh
    background-color $color4
    display flex
    flex-flow column no-wrap
    justify-content center
    align-items center
    color $white
    font-size 1.7rem
    text-align center
    
    h1
      font-size 300%
      text-transform lowercase
    p.tagline
      @extend $HeaderFont
      margin 0.6em auto 1em
      width 70%
    p.description
      @extend $BodyFont
      font-size 80%
      line-height 1.2em
      margin 0 auto
      width 50%
      
        