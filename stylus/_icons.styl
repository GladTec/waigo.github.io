i
  @extend .{$fa-css-prefix}
  display inline-block
  transition all 0.2s linear
  &.twitter
    fa-icon 'twitter'
  &.github
    fa-icon 'github'
  &.discuss
    fa-icon 'comments'
  &.menu
    fa-icon 'bars'
    &.open
      fa-icon-rotate(90deg, 1)
  &.changelog
    fa-icon 'code-fork'
  &.arrow
    &.right
      fa-icon 'angle-double-right'
    &.left
      fa-icon 'angle-double-right'
      fa-icon-rotate(180deg, 1)
