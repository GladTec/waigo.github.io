doctype html
html(lang="en")
  head
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1', charset='utf-8')

    title Waigo - next-gen web framework

    <!--[if IE]><link rel="shortcut icon" href="img/logo_32x32.ico" /><![endif]-->

    link(rel="shortcut icon", href="/img/logo_114x114.png")
    meta(name="msapplication-TileColor", content="#fff")
    meta(name="msapplication-TileImage", content="/img/logo_144x144.png")

    link(rel="stylesheet", media="screen", href="/style.css")

    block head

  body(class=siteNav)
    header#top
      nav.navbar.navbar-fixed-top(role="banner")
        .navbar-header
          button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#topmenu-navbar-collapse")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Waigo
        #topmenu-navbar-collapse.navbar-collapse.collapse(role="navigation")
          ul.nav.navbar-nav
            li(class=(siteNav === 'guide' ? 'active': ''))
              a(href="/guide.html") Guide
            li(class=(!siteNav ? 'active': ''))
              a(href="/api") API
            li(class=(siteNav === 'examples' ? 'active': ''))
              a(href="/examples/index.html") Examples
            li(class=(siteNav === 'sites' ? 'active': ''))
              a(href="/sites.html") Sites
          ul.nav.navbar-nav.navbar-right
            li
              a(href="https://github.com/waigo/waigo") Github

    main#content
      block content

    footer(role="contentinfo")
      div
        :markdown
          Waigo &copy; [Ramesh Nair](https://github.com/hiddentao). Page [generated](https://github.com/waigo/waigo.github.io) on #{new Date().toUTCString()}

    script(type="text/javascript", src="/scripts.js")

    script(type="text/javascript").
      var _paq = _paq || [];
      _paq.push(["setDomains", ["*.waigojs.com","*.waigo.github.io"]]);
      _paq.push(["trackPageView"]);
      _paq.push(["enableLinkTracking"]);
      (function() {
        var u=(("https:" == document.location.protocol) ? "https" : "http") + "://piwik.hiddentao.com/";
        _paq.push(["setTrackerUrl", u+"piwik.php"]);
        _paq.push(["setSiteId", "3"]);
        var d=document, g=d.createElement("script"), s=d.getElementsByTagName("script")[0]; g.type="text/javascript";
        g.defer=true; g.async=true; g.src=u+"piwik.js"; s.parentNode.insertBefore(g,s);
      })();

