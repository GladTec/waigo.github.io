extend layout

block content
  
  section#examples
    .row
      .col-md-2.hidden-xs.hidden-sm
        ul.nav.nav-pills.nav-stacked
          - each item in nav
            - var liClass = (selectedNavItem === item.title) ? 'active': ''
            li(class=liClass)
              - itemTitle = ('Introduction' !== item.title) ? '&raquo; ' + item.title : item.title
              a(href=item.url) !{itemTitle}
      .col-md-10
        .example
          - if ('Introduction' !== selectedNavItem)
            .intro
              div !{readmeHtml}
              p Available files:
              ul
              - each file in files
                li 
                  a(href='#' + file.path) #{file.path}
            br
            br
            ul.files
              - each file in files
                li(id=file.path)
                  a(name=file.path)
                  p #{file.path}
                  pre
                    code(class="lang-" + file.lang) !{file.contents}
          - else
            :markdown
              # Waigo examples

              Each of these example applications show how to deal with 
              specific scenarios within Waigo. 

              You can download and run them from the examples repository at 
              [https://github.com/waigo/examples](https://github.com/waigo/examples).

            