@import "nib"
@import "_variables"
@import "_animation"
@import "_highlight"
@import "_bootstrap"


/* Fonts */

@font-face {
  font-family: NexaLightRegular;
  src: url("fonts/Nexa Light.otf");
}


/* Structure */

$header-height = 50px



header#top
  nav
    height $header-height
    background-color $navbar-default-bg    
    z-index 999999
    opacity 0.95
  

  .navbar-toggle 
    .icon-bar 
      background-color $navbar-default-link-color
  

  .navbar-right
    li
      margin-rigth 0.2em  
  

  .navbar-brand 
    font-size 31px
    color $navbar-default-color
  

  .navbar-nav 
    background-color $navbar-default-bg    

    a 
      color $navbar-default-color

      &:hover 
        background-color $navbar-default-color
        color $navbar-default-bg

    li.active 
      background-color $navbar-default-link-hover-bg

      a 
        color $navbar-default-link-hover-color
      
    
  

  #topmenu-navbar-collapse 
    border-top 0

    ul.nav 
      margin-top 0
      margin-bottom 0
    
    li 
      margin 0 0.2em
      font-size 120%

    .navbar-right 
      li
        margin-right 0.5em
    
  



main#content 
  font-family "Open Sans", Verdana, Arial, sans-serif
  font-size 16px
  position relative
  top $header-height  
  min-height 800px

  h1, h2, h3 
    font-family NexaLightRegular, Helvetica, Arial, sans-serif
    color #666    
  


footer 
  position relative
  top $header-height
  background-color #000
  margin 2em 0 0
  padding 0.5em
  font-size 80%
  color #777




@import "pages/_home"
@import "pages/_guide"
@import "pages/_api"
@import "pages/_examples"
@import "pages/_sites"
