#api 
  section
    padding 2em 0 0

    &:first-child
      padding-top 0.5em
  

  .waigo-api-index 
    font-size 90%
    padding-top 1em

    ul.hidden-sm 
      top 62px
      padding 0
      margin 0
    

    .visible-xs 
      button 
        width 100%
      

      #api-index-xs 
        margin-top 0.5em
        border 1px solid #ccc
        border-radius 5px
        padding 0.5em
      
    

    a 
      padding 0.2em
    

    li.active 
      font-weight bold
      background-color $nav-link-hover-bg
    
  

  .waigo-content-menu 
    font-family monospace

    padding-top 1em

    & > ul > li > a 
      margin-top 0.2em
    
  

  .waigo-api-content 
    .label 
      margin-right 0.5em
    
    .symbolName 
      font-family monospace
    
    .symbolReturns 
      font-weight bold
      margin 0 0 0 0.2em
    
    table.params 
      td.type, td.name 
        font-family monospace
      
    
  

