/* Intro section */
$banner-width-xs 320px
$banner-height-xs 400px

$rays-width-xs 320px
$rays-height-xs 320px

#banner 
  width 100%
  background-color $theme-color2
  text-align center

  .rays 
    background url(img/rays-main-480x480.png) center center no-repeat 
    display inline-block
    position relative 
    top -100px
    width 480px 
    height 480px 
    
    animation-name spin 
    animation-duration 40000ms /* 40 seconds */
    animation-iteration-count infinite 
    animation-timing-function linear
    -moz-animation-name spin 
    -moz-animation-duration 40000ms /* 40 seconds */
    -moz-animation-iteration-count infinite 
    -moz-animation-timing-function linear
    -webkit-animation-name spin 
    -webkit-animation-duration 40000ms /* 40 seconds */
    -webkit-animation-iteration-count infinite 
    -webkit-animation-timing-function linear        
  

  .text 
    display block 
    position relative
    top -420px
    z-index 88888 

    .intro 
      font-family "Trebuchet MS", "Verdana", "Helvetica", sans-serif
      font-size 250%
    

    .get-started 
      margin 2em 0 1em

      a 
        font-size 150%
        margin 0 0.5em
      
    

    .version 
      font-size 130%
      margin 1em 0
    

    .meta 
      margin-top 2em

      div
        display inline-block
        width 80px
        margin-left 10px
      
    
  
#content
  section
    box-sizing border-box
    padding 1em 4em 3em

  #details1
    .intro
      font-size 120%
      text-align center
      margin-bottom 2em

    .features
      & > div
        margin 0 0 1.5em

      .glyphicon
        display inline-block
        background-color $theme-color5
        color $body-bg
        font-size 120%
        padding 1em
        margin 0 1em 1em 0
        border-radius 5px

        & + h3
          display inline-block

  #details2
    background-color #eee
      
  #sublinks
    margin-top 3em
  




@media $media-max-phone
  #banner
    .rays
      width 400px
      height 400px
      top -50px
    .text
      top -380px
  #content
    section
      padding 1em
  











